<% provide(:title, 'All My Transactions Amount') %>
<div class="total-div">
<h4><strong>My Total Transaction Amount in $:</strong> <%= total_hours(total_sum) %>hours <%= total_minutes(total_sum)%>mins</h4>
</div>
<div class="pagination"><%= will_paginate @transactions%></div>

<% @transactions.each do |transaction| %>

<div class="group-div">
<div>
<h3><strong><%= transaction.name %></strong></h3>
<p><small>Created At: <%= transaction.created_at.strftime("%d-%m-%y") %></small></p>
<h5><strong>Time Spent: <%= hours(transaction) %>hours <%= minutes(log) %>mins</strong></h5>
</div>
<%= group_img_helper(log)%>
</div>
<% end %>
<div class="pagination"><%= will_paginate @logs%></div>
<div class="create-group">
<%= link_to "Create New Log", new_log_path, class: "create-group-link"%>
</div>
<div class="create-pad"></div>